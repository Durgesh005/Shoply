<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">


    <RelativeLayout
        android:id="@+id/Add"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/ShowImageProduct"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_140sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/shoestemp" />
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/TempContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Card"
            android:layout_marginLeft="@dimen/_5sdp">

            <TextView
                android:id="@+id/TempProductText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Bacca Bucci"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/TempProductDes"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TempProductText"
                android:fontFamily="@font/inter_regular"
                android:maxLines="2"
                android:text="Men Grey Mesh High-Top Training or Gym Shoes"
                android:textSize="@dimen/_9sdp" />


            <TextView
                android:id="@+id/Rupee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TempProductDes"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="₹"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/TempPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TempProductDes"
                android:layout_alignParentLeft="@+id/Rupee"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="1199"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/Rupee2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TempProductDes"
                android:layout_alignParentLeft="@+id/TempPriceText"
                android:layout_marginLeft="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/strike_through_line"
                android:fontFamily="@font/inter_semibold"
                android:text="₹"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/TempLessPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TempProductDes"
                android:layout_alignParentLeft="@+id/TempPriceText"
                android:layout_marginLeft="@dimen/_43sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/strike_through_line"
                android:fontFamily="@font/inter_semibold"
                android:text="1799"
                android:textSize="@dimen/_9sdp" />


            <TextView
                android:id="@+id/TempOfferText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TempProductDes"
                android:layout_alignParentLeft="@+id/TempLessPrice"
                android:layout_marginLeft="@dimen/_75sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="15% Off"
                android:textColor="#F44336"
                android:textSize="@dimen/_8sdp" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/TempRateIcon"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_below="@+id/TempContent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/star" />


        <TextView
            android:id="@+id/TempRateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TempContent"
            android:layout_alignParentLeft="@+id/TempRateIcon"
            android:layout_marginLeft="@dimen/_25sdp"

            android:fontFamily="@font/inter_semibold"
            android:text="4.3"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/TempReviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TempContent"
            android:layout_alignParentLeft="@+id/TempRateText"
            android:layout_marginLeft="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/inter_semibold"
            android:text="(672)"
            android:textSize="@dimen/_7sdp" />


    </RelativeLayout>

</RelativeLayout>