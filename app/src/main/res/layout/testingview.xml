<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/temp_R1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/testimg" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/TestProductText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="Ketch "
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/TestdesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TestProductText"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/inter_regular"
                android:text="Ketch Men Navy Blue/Blue Slim Fit Checked Casual Shirt "
                android:textSize="@dimen/_7sdp" />


            <TextView
                android:id="@+id/TestPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TestdesText"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="$35"
                android:textColor="@color/black"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:id="@+id/TestofferpriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TestdesText"
                android:layout_alignLeft="@id/TestPriceText"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/strike_through_line"
                android:fontFamily="@font/inter_semibold"
                android:text="$45.39"
                android:textSize="@dimen/_5sdp" />

            <TextView
                android:id="@+id/OfferText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TestdesText"
                android:layout_alignLeft="@id/TestofferpriceText"
                android:layout_marginLeft="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="15% Off"
                android:textColor="#F44336"
                android:textSize="@dimen/_6sdp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>